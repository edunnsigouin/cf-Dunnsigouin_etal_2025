import matplotlib.pyplot as plt
import cartopy.crs as ccrs
import cartopy.feature as cfeature

def plot_bergen_map():
    # Coordinates for the modified map boundaries
    latitude_min, latitude_max = 60.25, 60.75
    longitude_min, longitude_max = 5.0, 5.5

    # Create a plot with a specific projection
    plt.figure(figsize=(10, 10))
    ax = plt.axes(projection=ccrs.PlateCarree())

    # Set the extent to the specified boundaries
    ax.set_extent([longitude_min-0.125, longitude_max+0.125, latitude_min-0.125, latitude_max+0.125])

    # Add features to the map for more details
    #ax.add_feature(cfeature.LAND)
    ax.add_feature(cfeature.OCEAN)
    ax.add_feature(cfeature.COASTLINE)
    #ax.add_feature(cfeature.RIVERS)
    #ax.add_feature(cfeature.LAKES)
    #ax.add_feature(cfeature.BORDERS, linestyle=':')

    ax.gridlines(draw_labels=True)
    # Add gridlines at intervals of 0.25 degrees and labels
    #ax.gridlines(draw_labels=True, xlocs=[i for i in range(int(longitude_min), int(longitude_max) + 1, 25)],
    #             ylocs=[i for i in range(int(latitude_min), int(latitude_max) + 1, 25)])

    # Display the plot
    plt.title("Map of Bergen Area with Modified Boundaries")
    plt.show()

# Run the function to plot the map
plot_bergen_map()
